<%
  @title = "Edit #{@edit_place_form.place.name}"
  @back_url = places_path
%>

<div class="card">
  <%= form_with url: places_path(@edit_place_form.place), method: :patch, model: @edit_place_form.place do |f| %>
    <div class="mb-3">
      <%= f.label :name, { class: "form-label" } %>
      <%= f.text_field :name, class: 'form-control', data: { test: 'name' }, required: true, minlength: '4' %>
    </div>

    <%= f.submit "Update", class: "btn btn-success" %>
  <% end %>

  <hr />

  <div>
    <%= link_to 'Add', new_place_colour_set_path(place_id: @edit_place_form.place.id), class: "btn btn-primary btn-sm" %>
    <% if @edit_place_form.place.colour_sets.any? %>
      <% @edit_place_form.place.colour_sets.each do |colour_set| %>
        <%= colour_set.description %>
      <% end %>
    <% else %>
      No colour sets
    <% end %>
  </div>
</div>

